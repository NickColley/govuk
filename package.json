{
  "type": "module",
  "name": "@nickcolley/govuk",
  "description": "Node.js API client for GOV.UK",
  "version": "0.0.1",
  "source": "index.js",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "scripts": {
    "build": "microbundle build --external none --alias node-fetch=unfetch,debug=debug.browser.js",
    "build:dev": "microbundle build --external none --alias node-fetch=unfetch",
    "test": "npm run lint && npm run ava:coverage",
    "ava:coverage": "NODE_OPTIONS=--loader=esmock c8 --100 ava",
    "ava": "NODE_OPTIONS=--loader=esmock ava",
    "lint": "eslint *.js && prettier --check *.js"
  },
  "license": "MIT",
  "files": [
    "index.js",
    "search.js",
    "content.js",
    "dist/index.cjs",
    "dist/index.modern.js",
    "dist/index.cjs",
    "dist/index.module.js",
    "dist/index.umd.js"
  ],
  "dependencies": {
    "async-retry": "^1.3.3",
    "debug": "^4.3.4",
    "eventemitter3": "^4.0.7",
    "node-fetch": "^3.2.10",
    "throttled-queue": "^2.1.4",
    "unfetch": "^4.2.0"
  },
  "devDependencies": {
    "ava": "^5.0.1",
    "c8": "^7.12.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-n": "^15.4.0",
    "eslint-plugin-prettier": "^4.2.1",
    "esmock": "^2.0.7",
    "JSONStream": "^1.3.5",
    "microbundle": "^0.15.1",
    "prettier": "^2.7.1"
  },
  "engines": {
    "node": "16.x"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:n/recommended",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    },
    "parserOptions": {
      "ecmaVersion": 2022
    }
  }
}
